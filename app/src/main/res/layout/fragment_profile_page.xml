<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_black2"
        android:paddingBottom="70dp"
        tools:context=".view.fragment.ProfilePage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/player_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center|center_vertical"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promore_string"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_drop_shadow" />

            <ImageView
                android:id="@+id/player_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:contentDescription="@string/search_hint"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xxxl"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rectangular_red"
                android:padding="5dp"
                android:paddingStart="15dp"
                android:layout_gravity="center"
                android:paddingEnd="15dp"
                android:text="@string/share_string"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_mylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:text="@string/mylist_string"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:text="@string/help_string"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile_signout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:text="@string/signout_string"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/font_big"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>
</layout>