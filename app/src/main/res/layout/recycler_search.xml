<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <!--<variable
            name="model"
            type="com.microteck.happymind.model.SecondEmoModel" />-->
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/app_black1"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/privacy_string"
                android:scaleType="fitXY"
                android:src="@drawable/ic_default" />

            <TextView
                android:id="@+id/search_tittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/app_name"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xxxl"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/search_play"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_play"
                android:padding="5dp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>