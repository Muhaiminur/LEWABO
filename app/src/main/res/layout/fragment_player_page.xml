<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_black1"
        android:orientation="vertical"
        android:paddingBottom="70dp"
        tools:context=".view.fragment.PlayerPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_back" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/player_search"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/player_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_user" />
        </LinearLayout>

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ic_loading"
            android:contentDescription="@string/search_hint" />

        <TextView
            android:id="@+id/player_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_xxxl"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:padding="1dp"
            android:text="@string/app_name"
            android:textColor="@color/app_white5"
            android:textSize="@dimen/font_m"
            android:textStyle="normal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/player_play"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_playrec2"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/player_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_l"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/player_mylist"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/ic_my_list"
                android:padding="5dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/player_like"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/ic_like"
                android:padding="5dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/player_share"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/ic_share"
                android:padding="5dp"
                app:backgroundTint="@null" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_drop_shadow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="1dp"
            android:text="@string/more_string"
            android:textColor="@color/white"
            android:textSize="@dimen/font_m"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>