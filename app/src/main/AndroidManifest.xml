<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lewabo.lewabo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Themelewabo">
        <activity
            android:name=".view.activity.PlayerDetails"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity android:name=".view.activity.HomePage" />
        <activity android:name=".view.activity.RegistrationPage" />
        <activity android:name=".view.activity.LoginPage" />
        <activity
            android:name=".view.activity.LandingPage"
            android:exported="true" />
        <activity
            android:name=".view.activity.SplashPage"
            android:exported="true"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>